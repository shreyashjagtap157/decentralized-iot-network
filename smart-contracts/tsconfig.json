{
    "compilerOptions": {
        "target": "es2022",
        "module": "commonjs",
        "lib": [
            "es2022"
        ],
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "typeRoots": [
            "node_modules/@types",
            "./types"
        ],
        "types": [
            "node",
            "mocha",
            "chai"
        ]
    },
    "include": [
        "./scripts/**/*",
        "./test/**/*",
        "./types/**/*",
        "./hardhat.config.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "cache",
        "artifacts"
    ],
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ]
    }
}