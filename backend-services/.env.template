# Backend Services Environment Configuration Template
# Copy this file to .env and update with your actual values

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/iot_network
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=iot_network

# JWT Authentication
JWT_SECRET_KEY=change-me-to-a-random-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME=Decentralized IoT Network API
DEBUG=true
# Add any other required environment variables below
# EXTERNAL_API_KEY=your-api-key

# MQTT Configuration
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_TOPIC_PREFIX=iot

# Blockchain Configuration
WEB3_PROVIDER_URL=http://localhost:8545
NETWORK_COMPENSATION_CONTRACT_ADDRESS=0x5FbDB2315678afecb367f032d93F642f64180aa3

# Redis (for caching)
REDIS_URL=redis://localhost:6379

# Monitoring
PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus_metrics

# Security
SECRET_KEY=change-me-to-a-random-secret-key
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]

# File Upload
UPLOAD_FOLDER=./uploads
MAX_CONTENT_LENGTH=16777216

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Admin Configuration
ADMIN_EMAIL=admin@iot-network.com
ADMIN_PASSWORD=admin123
